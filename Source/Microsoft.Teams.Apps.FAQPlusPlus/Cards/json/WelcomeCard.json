{
  "type": "AdaptiveCard",
  // "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0",
  "body": [
    {
      "type": "TextBlock",
      "text": "${text}",
      "horizontalAlignment": "Left",
      "wrap": true
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "${displytext}",
      "data": {
        "msteams": {
          "type": "messageBack",
          "displayText": "${displytext}",
          "text": "${submitActionText}"
        }
      }
    }
  ]
}
