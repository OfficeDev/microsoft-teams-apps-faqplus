
@model Microsoft.Teams.Apps.FAQPlusPlus.Configuration.Models.SubjectsViewModel

@using (Ajax.BeginForm("SaveSubjectsAsync", "Home", new AjaxOptions { HttpMethod = "POST", OnSuccess = "onSaveSuccess", OnFailure = "onSaveFailure" }, htmlAttributes: new { @class = "formToSubmit" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group" data-form-name="subjects">
        <div class="col-lg-3">
            @Html.LabelFor(model => model.Subjects, htmlAttributes: new { @class = "font-bold" })
            <span class="mandatoryField">*</span>
        </div>
        <div class="col-lg-5">
            @Html.TextAreaFor(model => model.Subjects, htmlAttributes: new { @class = "form-control subjectsIdTextBox toggleTextBox", @placeholder = "Enter welcome message less than 300 characters. Markdown is supported." })
            @Html.ValidationMessageFor(model => model.Subjects, "", htmlAttributes: new { @class = "error-message" })
        </div>
        <div class="col-lg-1">
            <span id="subjectsStorageStatusIcon"></span>
        </div>
        <div class="col-lg-3">
            <input type="button" value="OK" class="btn btn-primary toggleToEditButton" id="subjectsSubmitButton" />
            <span class="glyphicon glyphicon-info-sign infoSignMargin" data-toggle="tooltip" title="@Strings.SubjectsToolTipHoverMessage"></span>
        </div>
        <div class="col-lg-offset-3 col-lg-5">
            <div id="subjectsStorageStatusMessage" class="error-message"></div>
        </div>
    </div>
}
